@using DataAccessLibrary.Models;

<!-- List all users. -->
<table class="table table-striped table-responsive-md btn-table ">
    <thead>
        <tr class="font-weight-bolder text-dark" text-dark>
            <th>
                @Html.DisplayName("Document Path")
            </th>
            <th>
                @Html.DisplayName("End-Date")
            </th>
            <th>
                @Html.DisplayName("Uploader")
            </th>

            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["Documents"] as List<Documents> )
        {
        <tr>
            <td>
            @Html.ActionLink(item.DocumentPath, "GetDocument", "SysAdmin", new { filePath = item.DocumentPath }, null)
            </td>
            <td>
                @Html.DisplayFor(modelitem =>item.EndDate)
                
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.User.Email)
            </td>

        </tr>
        }
    </tbody>
</table>

